                <m:munder>
                  <m:mrow>
                    <m:mspace width="0.277778em"/>
                    <m:mpadded width="-3pt">
                      <m:mo>∫</m:mo>
                    </m:mpadded>
                    <m:mpadded width="-3pt">
                      <m:mo>∫</m:mo>
                    </m:mpadded>
                    <m:mspace width="0.277778em"/>
                  </m:mrow>
                  <m:mi>S</m:mi>
