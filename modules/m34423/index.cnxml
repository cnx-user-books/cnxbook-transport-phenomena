                      <m:mo>•</m:mo>
                      <m:mi mathvariant="bold">J</m:mi>
                      <m:mo>=</m:mo>
                      <m:mn>0</m:mn>
                    </m:mrow>
                  </m:mtd>
                </m:mtr>
