                  <m:mn>023</m:mn>
                </m:munder>
                <m:mrow>
                  <m:mi mathvariant="bold">a</m:mi>
                  <m:mo>•</m:mo>
                  <m:mi mathvariant="bold">t</m:mi>
                  <m:mi>d</m:mi>
                  <m:mi>s</m:mi>
                  <m:mo>=</m:mo>
                  <m:mfenced separators="" open="(" close=")">
                    <m:mrow>
                      <m:mfrac>
                        <m:mrow>
                          <m:mi>∂</m:mi>
                          <m:msub>
                            <m:mi>a</m:mi>
                            <m:mn>3</m:mn>
                          </m:msub>
                        </m:mrow>
                        <m:mrow>
                          <m:mi>∂</m:mi>
                          <m:msub>
                            <m:mi>x</m:mi>
                            <m:mn>2</m:mn>
                          </m:msub>
                        </m:mrow>
                      </m:mfrac>
                      <m:mo>-</m:mo>
                      <m:mfrac>
                        <m:mrow>
                          <m:mi>∂</m:mi>
                          <m:msub>
                            <m:mi>a</m:mi>
                            <m:mn>2</m:mn>
                          </m:msub>
                        </m:mrow>
                        <m:mrow>
                          <m:mi>∂</m:mi>
                          <m:msub>
                            <m:mi>x</m:mi>
                            <m:mn>3</m:mn>
                          </m:msub>
                        </m:mrow>
                      </m:mfrac>
                    </m:mrow>
                  </m:mfenced>
