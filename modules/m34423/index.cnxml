              </m:mtable>
            </m:math>
          </equation>
          <para id="id2259665">where</para>
          <equation id="id2259669">
            <m:math overflow="scroll" mode="display">
              <m:mrow>
                <m:mi>J</m:mi>
                <m:mo>=</m:mo>
                <m:mfrac>
                  <m:mrow>
                    <m:mi>∂</m:mi>
                    <m:mfenced separators="" open="(" close=")">
                      <m:mrow>
                        <m:msub>
                          <m:mi>x</m:mi>
                          <m:mn>1</m:mn>
                        </m:msub>
                        <m:mo>,</m:mo>
                        <m:mspace width="0.166667em"/>
                        <m:msub>
                          <m:mi>x</m:mi>
                          <m:mn>2</m:mn>
                        </m:msub>
                        <m:mo>,</m:mo>
                        <m:mspace width="0.166667em"/>
                        <m:msub>
                          <m:mi>x</m:mi>
                          <m:mn>3</m:mn>
                        </m:msub>
                      </m:mrow>
                    </m:mfenced>
                  </m:mrow>
                  <m:mrow>
                    <m:mi>∂</m:mi>
                    <m:mfenced separators="" open="(" close=")">
                      <m:mrow>
                        <m:msub>
                          <m:mi>ξ</m:mi>
                          <m:mn>1</m:mn>
                        </m:msub>
                        <m:mo>,</m:mo>
                        <m:mspace width="0.166667em"/>
                        <m:msub>
                          <m:mi>ξ</m:mi>
                          <m:mn>2</m:mn>
                        </m:msub>
                        <m:mo>,</m:mo>
                        <m:mspace width="0.166667em"/>
                        <m:msub>
                          <m:mi>ξ</m:mi>
                          <m:mn>3</m:mn>
                        </m:msub>
                      </m:mrow>
                    </m:mfenced>
                  </m:mrow>
                </m:mfrac>
                <m:mo>=</m:mo>
                <m:msub>
                  <m:mi>ε</m:mi>
                  <m:mrow>
                    <m:mi>i</m:mi>
                    <m:mi>j</m:mi>
                    <m:mi>k</m:mi>
                  </m:mrow>
                </m:msub>
                <m:mspace width="0.166667em"/>
                <m:mfrac>
                  <m:mrow>
                    <m:mi>∂</m:mi>
                    <m:msub>
                      <m:mi>x</m:mi>
                      <m:mi>i</m:mi>
                    </m:msub>
                  </m:mrow>
                  <m:mrow>
                    <m:mi>∂</m:mi>
                    <m:msub>
                      <m:mi>ξ</m:mi>
                      <m:mn>1</m:mn>
                    </m:msub>
                  </m:mrow>
                </m:mfrac>
                <m:mspace width="0.166667em"/>
                <m:mfrac>
                  <m:mrow>
                    <m:mi>∂</m:mi>
                    <m:msub>
                      <m:mi>x</m:mi>
                      <m:mi>j</m:mi>
                    </m:msub>
