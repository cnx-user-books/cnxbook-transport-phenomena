                    </m:mrow>
                  </m:mtd>
                </m:mtr>
                <m:mtr>
                  <m:mtd columnalign="left">
                    <m:mtext>or</m:mtext>
                  </m:mtd>
                </m:mtr>
                <m:mtr>
                  <m:mtd columnalign="left">
                    <m:mrow>
                      <m:msub>
                        <m:mo>∫</m:mo>
                        <m:mi>C</m:mi>
                      </m:msub>
                      <m:mrow>
                        <m:mi>F</m:mi>
                        <m:mo>(</m:mo>
                        <m:mi mathvariant="bold">x</m:mi>
                        <m:mo>)</m:mo>
                        <m:mi>d</m:mi>
                        <m:mi>s</m:mi>
                      </m:mrow>
                      <m:mo>=</m:mo>
                      <m:msubsup>
                        <m:mo>∫</m:mo>
                        <m:mi>a</m:mi>
                        <m:mi>b</m:mi>
                      </m:msubsup>
                      <m:mrow>
                        <m:mi>F</m:mi>
                        <m:mfenced separators="" open="[" close="]">
                          <m:mrow>
                            <m:mi mathvariant="bold">x</m:mi>
                            <m:mo>(</m:mo>
                            <m:mi>t</m:mi>
                            <m:mo>)</m:mo>
                          </m:mrow>
                        </m:mfenced>
