                        <m:mi>C</m:mi>
                      </m:msub>
                      <m:mrow>
                        <m:mi>F</m:mi>
                        <m:mspace width="0.166667em"/>
                        <m:mi>d</m:mi>
                        <m:mi>s</m:mi>
                      </m:mrow>
</m:mtd>
<m:mtd>                   
   <m:mo>=</m:mo>
</m:mtd>
<m:mtd columnalign="left">       
               <m:msub>
                        <m:mfenced open="[" close="]">
                          <m:mfenced separators="" open="[" close="]">
                            <m:mrow>
                              <m:msubsup>
                                <m:mo>∫</m:mo>
                                <m:mi>a</m:mi>
                                <m:mi>b</m:mi>
