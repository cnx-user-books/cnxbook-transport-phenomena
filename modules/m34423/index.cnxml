              </m:mrow>
            </m:math>
          </equation>
          <para id="id2265357">and in the limit</para>
          <equation id="id2265360">
            <m:math overflow="scroll" mode="display">
              <m:mrow>
                <m:munder>
                  <m:mo movablelimits="false" form="prefix">lim</m:mo>
                  <m:mrow>
                    <m:mi>d</m:mi>
                    <m:mi>A</m:mi>
                    <m:mo>→</m:mo>
                    <m:mn>0</m:mn>
                  </m:mrow>
                </m:munder>
                <m:mfrac>
                  <m:mn>1</m:mn>
                  <m:mrow>
                    <m:mi>d</m:mi>
                    <m:mi>A</m:mi>
                  </m:mrow>
                </m:mfrac>
                <m:munder>
                  <m:mo>∮</m:mo>
                  <m:mn>023</m:mn>
                </m:munder>
                <m:mrow>
                  <m:mi mathvariant="bold">a</m:mi>
                  <m:mo>•</m:mo>
                  <m:mi mathvariant="bold">t</m:mi>
                  <m:mi>d</m:mi>
                  <m:mi>s</m:mi>
                  <m:mo>=</m:mo>
                  <m:mfenced separators="" open="(" close=")">
                    <m:mrow>
                      <m:mfrac>
                        <m:mrow>
                          <m:mi>∂</m:mi>
                          <m:msub>
                            <m:mi>a</m:mi>
