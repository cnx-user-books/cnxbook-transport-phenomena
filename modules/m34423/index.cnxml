                                <m:mo>∫</m:mo>
                                <m:mi>a</m:mi>
                                <m:mi>b</m:mi>
                              </m:msubsup>
                              <m:mrow>
                                <m:mi>F</m:mi>
                                <m:mspace width="0.166667em"/>
                                <m:mi>d</m:mi>
