                    </m:mrow>
                  </m:msub>
                </m:mfenced>
                <m:mo form="prefix">sin</m:mo>
                <m:mi>θ</m:mi>
                <m:mspace width="0.166667em"/>
                <m:mi>d</m:mi>
                <m:msub>
                  <m:mi>u</m:mi>
                  <m:mn>1</m:mn>
