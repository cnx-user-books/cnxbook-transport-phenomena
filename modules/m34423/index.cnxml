                    <m:mo>∮</m:mo>
                    <m:mi>C</m:mi>
                  </m:msub>
                  <m:mrow>
                    <m:msub>
                      <m:mi>a</m:mi>
                      <m:mi>i</m:mi>
                    </m:msub>
                    <m:mfenced separators="" open="[" close="]">
                      <m:mrow>
                        <m:msub>
                          <m:mi>x</m:mi>
                          <m:mn>1</m:mn>
                        </m:msub>
                        <m:mrow>
                          <m:mo>(</m:mo>
                          <m:mi>s</m:mi>
                          <m:mo>)</m:mo>
                        </m:mrow>
                        <m:mo>,</m:mo>
                        <m:msub>
                          <m:mi>x</m:mi>
                          <m:mn>2</m:mn>
                        </m:msub>
                        <m:mrow>
                          <m:mo>(</m:mo>
                          <m:mi>s</m:mi>
                          <m:mo>)</m:mo>
                        </m:mrow>
                        <m:mo>,</m:mo>
                        <m:msub>
                          <m:mi>x</m:mi>
                          <m:mn>3</m:mn>
                        </m:msub>
                        <m:mrow>
                          <m:mo>(</m:mo>
                          <m:mi>s</m:mi>
                          <m:mo>)</m:mo>
                        </m:mrow>
                      </m:mrow>
                    </m:mfenced>
                  </m:mrow>
                </m:mrow>
                <m:mspace width="0.166667em"/>
                <m:msub>
                  <m:mi>τ</m:mi>
                  <m:mi>i</m:mi>
                </m:msub>
